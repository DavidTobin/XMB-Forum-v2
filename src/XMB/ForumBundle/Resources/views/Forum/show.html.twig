{% extends('XMBForumBundle::adminlayout.html.twig') %}


{% block content %}
    <form class="form-inline" action="{{ path('admin_forums_delete', { 'id': entity.id }) }}" method="post" style="background: inherit;">   
        <a class="btn btn-primary" href="{{ path('admin_forums') }}">
            Back to Forums
        </a>
    
        <a class="btn btn-success" href="{{ path('admin_forums_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        
        <button class="btn btn-danger" type="submit">Delete</button>
    
        {{ form_widget(delete_form) }}                
    </form>

    <div class="forum">
        <h1>Forum</h1>
    </div>
    
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Forum Name</th>
                <td>{{ entity.forumname }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Display Order</th>
                <td>{{ entity.displayorder }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}