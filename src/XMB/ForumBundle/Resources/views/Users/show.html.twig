{% extends('XMBForumBundle::adminlayout.html.twig') %}

{% block content %}
    <form class="form-inline" action="{{ path('admin_users_delete', { 'id': entity.id }) }}" method="post" style="background: inherit;">
        <a class="btn" href="{{ path('admin_users') }}">
            Back to Users
        </a>
        <a class="btn btn-primary" href="{{ path('admin_users_edit', { 'id': entity.id }) }}">
            Edit
        </a>            
        
        <button class="btn btn-danger" type="submit">Delete</button>
        
        {{ form_widget(delete_form) }}        
    </form>

    <div class="forum">
        <h1>Users</h1>
    </div>
    
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>        
{% endblock %}