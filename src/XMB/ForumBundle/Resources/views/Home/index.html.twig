{% extends('XMBForumBundle::layout.html.twig') %}

{% block content %}
    <div class="container" style="text-align: center;">
        <div class="row">
            <div class="span10">
                <div class="forum">
                    <h1 id="active-forum-name">Latest Threads</h1>                                        
                </div>
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Forum</th>
                            <th>Author</th>
                            <th>Replies</th>
                            <th>Views</th>
                            <th>Last Post</th>
                        </tr>
                    </thead>
                    <tbody id="thread-list">
                        {% for thread in threads %}
                            {% include('XMBForumBundle:Home:thread.html.twig') %}
                        {% endfor %} 
                    </tbody>
                </table>
                    
                    <div class="pagination pagination-right">
                        <ul>
                            <li class="disabled"><a href="#">Prev</a></li>
                            <li class="disabled"><a href="javascript://">1</a></li>
                            <li class="disabled"><a href="#">Next</a></li>
                        </ul>
                    </div>
                
                <br />
                
                <div class="forum">
                    <h1>Statistics</h1>
                </div>
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Who's Online? (1 User &amp; 0 Guests)</th>
                            <th>Forum Information</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><a href="#">Admin</a></td>
                            <td>
                                <p><small>Threads: 1 | Posts: 1 | Users: 1</small></p>
                                <p><small>Welcome to our newest user, <a href="#">Admin</a></small></p>
                            </td>
                        </tr>
                    </tbody>
                </table>                                        

            </div>
        </div>
    </div>    
{% endblock %}

{% block sidebar %}
    <ul class="nav nav-pills forum-list" id="forum-list">
        <li id="forum_li_0" class="active"><a href="javascript://" data-action="{{ path('_home_long', { forum: 0}) }}" onclick="XMB.update_thread_list(null, 0)" id="forum_0" rel="tooltip" data-title="View the latest 15 threads!">Latest Threads</a></li>
        <li class="nav-header">Forums</li>
        {% for forum in forums %}
            <li id="forum_li_{{ forum.id }}"><a href="javascript://" data-action="{{ path('_home_long', { 'forum': forum.slug}) }}" onclick="XMB.update_thread_list('{{ forum.slug }}', {{ forum.id }})" id="forum_{{ forum.id }}" rel="tooltip" data-title="{{ forum.description }}">{{ forum.forumname }}</a></li>
        {% endfor %}        
    </ul>
{% endblock %}