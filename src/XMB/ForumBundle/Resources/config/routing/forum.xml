<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_forums" pattern="/admin/forum">
        <default key="_controller">XMBForumBundle:Forum:index</default>
    </route>

    <route id="admin_forums_show" pattern="/admin/forum/{id}/show">
        <default key="_controller">XMBForumBundle:Forum:show</default>
    </route>

    <route id="admin_forums_new" pattern="/admin/forum/new">
        <default key="_controller">XMBForumBundle:Forum:new</default>
    </route>

    <route id="admin_forums_create" pattern="/admin/forum/create">
        <default key="_controller">XMBForumBundle:Forum:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_forums_edit" pattern="/admin/forum/{id}/edit">
        <default key="_controller">XMBForumBundle:Forum:edit</default>
    </route>

    <route id="admin_forums_update" pattern="/admin/forum/{id}/update">
        <default key="_controller">XMBForumBundle:Forum:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_forums_delete" pattern="/admin/forum/{id}/delete">
        <default key="_controller">XMBForumBundle:Forum:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
