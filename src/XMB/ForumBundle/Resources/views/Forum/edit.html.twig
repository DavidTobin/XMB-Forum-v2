{% extends('XMBForumBundle::adminlayout.html.twig') %}


{% block content %}
    <form class="form-inline" action="{{ path('admin_forums_delete', { 'id': entity.id }) }}" method="post" style="background: inherit;">
        <a class="btn btn-primary" href="{{ path('admin_forums') }}">
            Back to the list
        </a>
           
        <div class="hide">
            {{ form_widget(delete_form) }}
        </div>
                
        <button class="btn btn-danger" type="submit">Delete Forum</button>
                
    </form>

    <div class="forum">
        <h1>Forum edit</h1>
    </div>
    
    <form class="form-horizontal" action="{{ path('admin_forums_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        
        <div class="form-actions">
            <button class="btn btn-primary" type="submit">Edit</button>
        </div>
    </form>    
{% endblock %}